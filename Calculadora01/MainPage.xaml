<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora01.MainPage"
             Title="Prime Video"
             BackgroundColor="Black">
    <!-- Usamos un ScrollView principal para que todo sea desplazable -->
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Menú Superior (Todo, Películas, Series) -->
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="20">
                <Label Text="Todo" TextColor="White" FontSize="14" />
                <Label Text="Películas" TextColor="White" FontSize="14" />
                <Label Text="Series" TextColor="White" FontSize="14" />
            </HorizontalStackLayout>

            <!-- Banner Superior -->
            <Image x:Name="banner1" 
                   Source="banner1.png" 
                   Aspect="AspectFill" 
                   HeightRequest="200" />

            <!-- Título del Banner -->
            <Label Text="La otra BODA"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Start" />

            <!-- Subtítulo (Ej: Período de prueba gratis) -->
            <Label Text="Período de prueba gratis de Prime"
                   TextColor="White"
                   FontSize="12"
                   HorizontalOptions="Start" />

            <!-- Sección: Películas que te recomendamos -->
            <Label Text="Prime – Películas que te recomendamos"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,10,0,0" />

            <!-- Scroll horizontal de recomendaciones -->
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <!-- Sustituye cada Source con tu imagen real -->
                    <Image Source="movie1.png"
                           WidthRequest="120"
                           HeightRequest="180"
                           Aspect="AspectFill" />
                    <Image Source="movie2.png"
                           WidthRequest="120"
                           HeightRequest="180"
                           Aspect="AspectFill" />
                    <Image Source="movie3.png"
                           WidthRequest="120"
                           HeightRequest="180"
                           Aspect="AspectFill" />
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Sección: Películas más populares -->
            <Label Text="Prime – Las películas más populares de Prime Video"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,10,0,0" />

            <!-- Scroll horizontal de películas populares -->
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <Image Source="movie4.png"
                           WidthRequest="120"
                           HeightRequest="180"
                           Aspect="AspectFill" />
                    <Image Source="movie5.png"
                           WidthRequest="120"
                           HeightRequest="180"
                           Aspect="AspectFill" />
                    <Image Source="movie6.png"
                           WidthRequest="120"
                           HeightRequest="180"
                           Aspect="AspectFill" />
                </HorizontalStackLayout>
            </ScrollView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
